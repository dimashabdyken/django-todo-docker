pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                // Просто проверяем, что Dockerfile валидный
                sh 'docker build -t django-todo-image:latest .'
            }
        }

        stage('Run Django Tests') {
            steps {
                script {
                    // Запуск тестов во временном контейнере
                    sh 'docker rm -f test-container || true'
                    sh "docker run -d --name test-container django-todo-image:latest sh -c 'sleep 30'"
                    sh 'sleep 5' 
                    sh 'docker exec test-container python manage.py test'
                    sh 'docker rm -f test-container'
                }
            }
        }
        
        stage('Deploy via Ansible') {
            steps {
                echo "Starting Deployment via Ansible..."
                sh 'ansible-playbook deploy.yml'
            }
        }
    }
}